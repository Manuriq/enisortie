{% extends 'base.html.twig' %}

{% block body %}
    {% form_theme sortieForm 'bootstrap_3_horizontal_layout.html.twig' %}
    {{form_start(sortieForm) }}
    <div class="d-flex flex-row m-3">
        <div class="d-flex flex-column w-50">
            <div class="d-flex flex-row m-2 align-items-center">
                {{ form_label(sortieForm.nom) }}
                {{ form_widget(sortieForm.nom) }}
            </div>
            <div class="d-flex flex-row m-2 align-items-center">
                {{ form_label(sortieForm.dateHeureDebut,'Date et heure de la sortie') }}
                {{ form_widget(sortieForm.dateHeureDebut) }}
            </div>
            <div class="d-flex flex-row m-2 align-items-center">
                {{ form_label(sortieForm.dateLimiteInscription, 'Date limite d\'inscription :') }}
                {{ form_widget(sortieForm.dateLimiteInscription) }}
            </div>
            <div class="d-flex flex-row m-2 align-items-center">
                {{ form_label(sortieForm.nbInscriptionsMax) }}
                {{ form_widget(sortieForm.nbInscriptionsMax) }}
            </div>
            <div class="d-flex flex-row m-2 align-items-center">
                {{ form_label(sortieForm.duree) }}
                {{ form_widget(sortieForm.duree) }}
            </div>
            <div class="d-flex flex-row m-2 align-items-center">
                {{ form_label(sortieForm.infosSortie) }}
                {{ form_widget(sortieForm.infosSortie) }}
            </div>
        </div>
        <div class="d-flex flex-column w-50">
            <div class="d-flex flex-row m-2 align-items-center">
                {{ form_label(sortieForm.campus) }}
                {{ form_widget(sortieForm.campus) }}
            </div>
            <div class="d-flex flex-row m-2  align-items-center">
                <label for="rue">Ville : </label>
                <select>
                    <option>Sélectionner une ville</option>
                    {% if villes %}
                    {% for ville in villes %}
                        <option value="{{ ville.id}}">{{ ville.nom }}</option>
                    {% endfor %}
                    {% else %}
                        <option>Ajouter les villes en BDD</option>
                    {% endif %}
                </select>
            </div>
            <div class="d-flex flex-row m-2 align-items-center">
                <label for="rue">Lieu</label>
                <input class="form-control" id="rue" type="text">
            </div>
            <div class="d-flex flex-row m-2 align-items-center">
                <label for="rue">Rue</label>
                <input class="form-control" id="rue" type="text">
            </div>
            <div class="d-flex flex-row m-2 align-items-center">
                <label for="codePostal">Code Postal</label>
                <input class="form-control" id="codePostal" type="text">
            </div>
            <div class="d-flex flex-row m-2 align-items-center">
                <label class="form-group" for="latitude">Latitude</label>
                <input class="form-control" id="latitude" type="text">
            </div>
            <div class="d-flex flex-row m-2 align-items-center">
                <label for="longitude">Longitude</label>
                <input class="form-control" id="longitude" type="text">
            </div>
        </div>
    </div>
    <button>Enregister</button>
    <!--<button>Publier la sortie</button>
    <button>Annuler</button>-->

    <script>
        $(document).ready(function() {
            $('.datePickerDebut').datepicker();
        });
        $(document).ready(function() {
            $('.datePickerLimite').datepicker();
        });
    </script>
{{  form_end(sortieForm) }}
{% endblock %}

{% block title %}
    {{ parent() }} - Créer une sortie
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>

{% endblock %}
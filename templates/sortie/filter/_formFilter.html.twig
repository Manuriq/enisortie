
{{ form_start(formFilter) }}
<div class="form-control d-flex flex-row">
    <div class="d-flex flex-column w-50">
        <div class="d-flex flex-row align-items-center">
            <div class="m-1">{{ form_label(formFilter.campus) }}</div>
            <div class="m-1">{{ form_widget(formFilter.campus) }}</div>
        </div>
        <div class="d-flex flex-row align-items-center">
            <div class="m-1">{{ form_label(formFilter.nom) }}</div>
            <div class="m-1">{{ form_widget(formFilter.nom) }}</div>
        </div>
        <div class="d-flex flex-row align-items-center">
            <div class="m-1">{{ form_label(formFilter.dateDebut) }}</div>
            <div class="m-1">{{ form_widget(formFilter.dateDebut) }}</div>
            <div class="m-1">{{ form_label(formFilter.dateFin) }}</div>
            <div class="m-1">{{ form_widget(formFilter.dateFin) }}</div>
        </div>
    </div>

    <div class="d-flex flex-column w-50 justify-content-center">
        <div class="form-check">
            {{ form_label(formFilter.checkOrganisateur) }}
            {{ form_widget(formFilter.checkOrganisateur) }}
        </div>
        <div class="form-check">
            {{ form_label(formFilter.checkSortiesInscrit) }}
            {{ form_widget(formFilter.checkSortiesInscrit) }}
        </div>
        <div class="form-check">
            {{ form_label(formFilter.checkSortiesNonInscrit) }}
            {{ form_widget(formFilter.checkSortiesNonInscrit) }}
        </div>
        <div class="form-check">
            {{ form_label(formFilter.checkSortiesPassees) }}
            {{ form_widget(formFilter.checkSortiesPassees) }}
        </div>
    </div>
    <div class="d-flex flex-column justify-content-center m-5">
        {{ form_widget(formFilter.submit) }}
    </div>
</div>
{{ form_end(formFilter) }}
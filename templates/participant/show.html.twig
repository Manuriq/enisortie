{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Votre profile{% endblock %}

{% block body %}
    <h1>Votre Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ participant.mail }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                {% if 'ROLE_ADMIN' in app.user.roles %}
                <td>Administrateur</td>
                {% else %}
                <td>Utilisateur</td>
                {% endif %}
                
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ participant.prenom }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ participant.pseudo }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ participant.telephone }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ participant.actif ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_participant_edit', {'id': participant.id}) }}">Editer</a>

{% endblock %}
